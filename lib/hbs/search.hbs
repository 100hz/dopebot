{{#if response.albums}}
*Albums:*
{{#each response.albums.items}}
{{@index}}: *<{{this.uri}}|{{this.name}}>*
{{else}}
*Nothing found*
{{/each}}
{{/if}}
{{#if response.artists}}

*Artists:*
{{#each response.artists.items}}
{{@index}}: *<{{this.uri}}|{{this.name}}>*
{{else}}
*Nothing found*
{{/each}}
{{/if}}
{{#if response.tracks}}

*Tracks:*
{{#each response.tracks.items}}
{{@index}}: *<{{this.uri}}|{{this.name}}>* by *<{{this.artists.0.uri}}|{{this.artists.0.name}}>* from *<{{this.album.uri}}|{{this.album.name}}>*
{{else}}
*Nothing found*
{{/each}}
{{/if}}
{{#if response.playlists}}

*Playlists:*
{{#each response.playlists.items}}
{{@index}}: *<{{this.uri}}|{{this.name}}>* by *<{{this.owner.uri}}|{{this.owner.id}}>*
{{else}}
*Nothing found*
{{/each}}
{{/if}}